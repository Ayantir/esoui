<GuiXml>
    <Controls>
        <Control name="ZO_CampaignBrowserDialogsGamepadMenuEntry" inherits="ZO_GamepadMenuEntryTemplate" virtual="true">
            <OnInitialized>
                ZO_SharedGamepadEntry_OnInitialized(self)
                self.subLabelCount = 1
                ZO_SharedGamepadEntry_SetHeightFromLabelWithSideLabel(self)
            </OnInitialized>
            <Controls>
                <Label name="$(parent)SubLabel1" inherits="ZO_GamepadMenuEntrySubLabelTemplateMain" font="ZoFontGamepad42" excludeFromResizeToFitExtents="true">
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)RootSpacer" />
                </Label>

                <Label name="$(parent)Label" override="true">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)RootSpacer" offsetX="ZO_GAMEPAD_DEFAULT_LIST_ENTRY_MINIMUM_INDENT"/>
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)SubLabel1" relativePoint="TOPLEFT"/>
                </Label>
            </Controls>
        </Control>

        <Control name="ZO_CampaignBrowserDialogsGamepadMenuEntryNoIcon" inherits="ZO_CampaignBrowserDialogsGamepadMenuEntry" virtual="true">
            <Controls>
                <Label name="$(parent)Label" override="true">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)RootSpacer" />
                    <Anchor point="TOPRIGHT" relativeTo="$(parent)SubLabel1" relativePoint="TOPLEFT"/>
                </Label>
            </Controls>
        </Control>

        <Control name="ZO_CampaignBrowserDialogsGamepadMenuEntryExtraInfo" inherits="ZO_CampaignBrowserDialogsGamepadMenuEntryNoIcon" virtual="true">
            <Controls>
                <Label name="$(parent)Label" override="true">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)RootSpacer" />
                    <Anchor point="TOPRIGHT" />
                </Label>
                <Label name="$(parent)SubLabel1" font="ZoFontGamepad34" override="true">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Label" relativePoint="BOTTOMLEFT" />
                </Label>
            </Controls>
        </Control>
    </Controls>
</GuiXml>