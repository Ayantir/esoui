<GuiXml>
    <Controls>
        <Control name="ZO_MarketChildlessCategory" inherits="ZO_IconHeader" virtual="true">
            <OnInitialized>
                ZO_IconHeader_OnInitialized(self)
                self.OnMouseUp = ZO_TreeEntry_OnMouseUp
                self.SetSelected = ZO_IconHeader_Setup
            </OnInitialized>
        </Control>
        
        <Label name="ZO_MarketSubCategory" virtual="true" font="ZoFontHeader" inherits="ZO_SelectableLabel">
            <OnMouseUp>
                ZO_TreeEntry_OnMouseUp(self, upInside)
            </OnMouseUp>
        </Label>
        
        <Label name="ZO_Market_GroupLabel" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" font="ZoFontHeader" modifyTextType="UPPERCASE" virtual="true"/>

        <Label name="ZO_Market_SubscriptionBenefitLine" font="ZoFontWinH4" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" virtual="true">
            <Dimensions x="475" />
        </Label>

        <TopLevelControl name="ZO_Market" inherits="ZO_RightPanelFootPrint" mouseEnabled="true" hidden="true">
            <OnInitialized>
                ZO_Market_OnInitialize(self)
            </OnInitialized>

            <Controls>
                
                <Control name="$(parent)Header">
                    <Dimensions x="1024" y="50" />
                    <Anchor point="RIGHT" offsetX="30" offsetY="-370" />
                    <Controls>
                        <Label name="$(parent)Label" text="SI_MARKET_TITLE" font="ZoFontWindowTitle" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" modifyTextType="UPPERCASE">
                            <Anchor point="LEFT" offsetX="50" />
                        </Label>

                        <Texture name="$(parent)Divider" textureFile="EsoUI/Art/Miscellaneous/centerscreen_topDivider.dds">
                            <Dimensions x="1024" y="4" />
                            <Anchor point="BOTTOM"/>
                        </Texture>
                    </Controls>
                </Control>

                <Control name="$(parent)Contents">
                    <Anchor point="TOPLEFT" offsetY="5" />
                    <Anchor point="BOTTOMRIGHT" offsetX="-5" />

                    <Controls>
                        <Backdrop name="$(parent)Search" tier="HIGH" inherits="ZO_SingleLineEditBackdrop_Keyboard">
                            <Anchor point="TOPLEFT" offsetX="10" offsetY="26" />
                            <Dimensions x="240"/>
                            <Controls>
                                <EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText">
                                    <OnInitialized>
                                        ZO_EditDefaultText_Initialize(self, GetString(SI_MARKET_SEARCH_EDIT_DEFAULT))
                                    </OnInitialized>

                                    <OnEscape>
                                        ZO_Market_EndSearch(self)
                                    </OnEscape>

                                    <OnMouseDown>
                                        ZO_Market_BeginSearch(self)
                                    </OnMouseDown>

                                    <OnTextChanged>
                                        ZO_EditDefaultText_OnTextChanged(self)
                                        ZO_Market_OnSearchTextChanged(self)
                                    </OnTextChanged>

                                    <OnEnter>
                                        ZO_Market_OnSearchEnterKeyPressed(self)
                                    </OnEnter>
                                </EditBox>
                            </Controls>
                        </Backdrop>
                        
                        <Label name="$(parent)SearchLabel" inherits="ZO_MarketDefaultLabel" text="SI_MARKET_SEARCH_FILTER_BY_LABEL">
                            <Anchor point="BOTTOMLEFT" relativeTo="$(parent)Search" relativePoint="TOPLEFT"/>
                        </Label>

                        <Control name="$(parent)Filter" inherits="ZO_ComboBox">
                            <Dimensions x="222" y="32" />
                            <Anchor point="TOPRIGHT" offsetX="-30" offsetY="26"/>
                        </Control>

                        <Label name="$(parent)FilterLabel" inherits="ZO_MarketDefaultLabel" text="SI_MARKET_FILTER_LABEL">
                            <Anchor point="BOTTOMLEFT" relativeTo="$(parent)Filter" relativePoint="TOPLEFT"/>
                        </Label>

                        <Control name="$(parent)Categories" inherits="ZO_ScrollContainer">
                            <Dimensions x="280" />
                            <Anchor point="TOPLEFT" offsetX="-10" offsetY="72"/>
                            <Anchor point="BOTTOMLEFT" offsetX="-10" offsetY="-62"/>
                        </Control>

                        <Control name="$(parent)EntryList" inherits="ZO_ScrollContainer">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Categories" relativePoint="TOPRIGHT" offsetX="10" offsetY="-10"/>
                            <Anchor point="BOTTOMRIGHT" offsetX="-12"/>
                        </Control>

                        <Control name="$(parent)Currency" mouseEnabled="true" resizeToFitDescendents="true">
                            <Anchor point="TOP" relativeTo="$(parent)Categories" relativePoint="BOTTOM" />
                            <OnMouseEnter>
                                ZO_MarketCurrency_OnMouseEnter(self)
                            </OnMouseEnter>
                            <OnMouseExit>
                                ZO_MarketCurrency_OnMouseExit(self)
                            </OnMouseExit>
                            <Controls>
                                <Label name="$(parent)CurrencyLabel" inherits="ZO_MarketDefaultLabel" horizontalAlignment="CENTER" font="ZoFontHeader">
                                    <Anchor point="TOP" offsetX="-16" />
                                </Label>
                        
                                <Texture name="$(parent)CurrencyIcon" inherits="ZO_MarketCurrencyIcon">
                                    <Dimensions x="32" y="32" />
                                    <Anchor point="LEFT" relativeTo="$(parent)CurrencyLabel" relativePoint="RIGHT" offsetX="2" offsetY="-3" />
                                </Texture>
                            </Controls>
                        </Control>

                        <Button name="$(parent)BuyCrowns" inherits="ZO_DefaultButton" text="SI_MARKET_BUY_CROWNS">
                            <Dimensions x="200"/>
                            <Anchor point="TOP" relativeTo="$(parent)Currency" relativePoint="BOTTOM" offsetY="8"/>
                            <OnClicked>
                                ZO_MarketCurrencyBuyCrowns_OnClicked(self)
                            </OnClicked>
                            <Controls>
                                <Texture name="$(parent)Icon" textureFile="EsoUI/Art/Icons/store_crowns.dds" layer="CONTROLS">
                                    <Dimensions x="64" y="64" />
                                    <Anchor point="RIGHT" relativePoint="LEFT" offsetX="32" />
                                </Texture>
                            </Controls>
                        </Button>
                        
                        <Label name="$(parent)NoMatchMessage" font="ZoFontWinH4" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" text="SI_MARKET_SEARCH_NO_MATCHES" horizontalAlignment="CENTER" hidden="true">
                            <Anchor point="TOP" relativeTo="$(parent)EntryList"/>
                        </Label>
                        
                        <Control name="$(parent)SubscriptionPage" inherits="ZO_ScrollContainer" hidden="true">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Categories" relativePoint="TOPRIGHT" offsetX="10" offsetY="-10"/>
                            <Anchor point="BOTTOMRIGHT" offsetX="-12"/>
                            
                            <Controls>
                                <Control name="$(parent)ScrollChild" override="true">
                                    <Controls>
                                        <Texture name="$(parent)MembershipInfoBanner">
                                            <Dimensions x="636" y="150" />
                                            <!-- 1024x256 image cropped to 636x150 -->
                                            <TextureCoords left="0" right="0.62109375" top="0" bottom="0.5859375"/>
                                            <Anchor point="TOPLEFT" />
                                        </Texture>

                                        <Label name="$(parent)MembershipInfoTitle" font="ZoFontWinH1" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" text="SI_MARKET_SUBSCRIPTION_PAGE_TITLE" modifyTextType="UPPERCASE">
                                            <Anchor point="TOPLEFT" relativeTo="$(parent)MembershipInfoBanner" offsetX="140" offsetY="45" />
                                            <Anchor point="TOPRIGHT" relativeTo="$(parent)MembershipInfoBanner" offsetX="-20" offsetY="45" />
                                        </Label>

                                        <Label name="$(parent)MembershipInfoLabel" font="ZoFontWinH4" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" text="SI_MARKET_SUBSCRIPTION_PAGE_SUBSCRIPTION_STATUS_LABEL" modifyTextType="UPPERCASE">
                                            <Anchor point="TOPLEFT" relativeTo="$(parent)MembershipInfoTitle" relativePoint="BOTTOMLEFT" />
                                        </Label>

                                        <Label name="$(parent)MembershipInfoStatus" font="ZoFontWinH4" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED">
                                            <AnchorToBaseline side="RIGHT" relativeToLabel="$(parent)MembershipInfoLabel" offsetX="5" />
                                        </Label>

                                        <Label name="$(parent)Overview" font="ZoFontWinH4" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL">
                                            <Anchor point="TOPLEFT" relativeTo="$(parent)MembershipInfoBanner" relativePoint="BOTTOMLEFT" offsetY="10" />
                                            <Anchor point="TOPRIGHT" relativeTo="$(parent)MembershipInfoBanner" relativePoint="BOTTOMRIGHT" offsetX="-20" offsetY="10" />
                                        </Label>

                                        <Label name="$(parent)BenefitsTitle" font="ZoFontWinH1" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" text="SI_MARKET_SUBSCRIPTION_PAGE_BENEFITS_TITLE">
                                            <Anchor point="TOPLEFT" relativeTo="$(parent)Overview" relativePoint="BOTTOMLEFT" offsetY="30" />
                                            <Anchor point="TOPRIGHT" relativeTo="$(parent)Overview" relativePoint="BOTTOMRIGHT" offsetY="30" />
                                        </Label>

                                        <Control name="$(parent)BenefitsLineContainer" resizeToFitDescendents="true">
                                            <Anchor point="TOPLEFT" relativeTo="$(parent)BenefitsTitle" relativePoint="BOTTOMLEFT" offsetY="4" />
                                            <Anchor point="TOPRIGHT" relativeTo="$(parent)BenefitsTitle" relativePoint="BOTTOMRIGHT" offsetY="4" />
                                        </Control>

                                        <Button name="$(parent)SubscribeButton" inherits="ZO_DefaultButton" text="SI_MARKET_SUBSCRIPTION_PAGE_BUY_SUBSCRIPTION">
                                            <Dimensions x="230" />
                                            <Anchor point="TOP" relativeTo="$(parent)BenefitsLineContainer" relativePoint="BOTTOM" offsetY="50" />

                                            <OnClicked>
                                                ZO_MarketCurrencyBuySubscription_OnClicked(self)
                                            </OnClicked>
                                        </Button>
                                    </Controls>
                                </Control>
                            </Controls>
                        </Control>

                    </Controls>
                </Control>

                <Control name="$(parent)Message">
                    <Anchor point="TOPLEFT" offsetY="5" />
                    <Anchor point="BOTTOMRIGHT" offsetX="-5" />

                    <Controls>
                        <Label name="$(parent)Label" font="ZoFontWinH3" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" horizontalAlignment="CENTER">
                            <Dimensions y="100"/>
                            <Anchor point="TOP" offsetY="77"/>
                        </Label>
                        
                        <Control name="$(parent)LoadingIcon" inherits="ZO_Loading">
                            <Anchor point="TOPRIGHT" relativeTo="$(parent)Label" relativePoint="TOPLEFT" offsetX="-10"/>
                            <Dimensions x="64" y="64"/>
                            <OnInitialized>
                                ZO_Loading_Initialize(self)
                            </OnInitialized>
                        </Control>
                    </Controls>
                </Control>

                <!-- Control is given level 1 so that we can click the next/previous buttons to change between preview states -->
                <Control name="$(parent)RotationArea" mouseEnabled="true" level="1">
                    <!-- Position this control so it's roughly centered over the player character -->
                    <Anchor point="TOPLEFT" relativeTo="GuiRoot" offsetX="285" offsetY="100" />
                    <Anchor point="BOTTOMRIGHT" relativeTo="GuiRoot" offsetX="-1035" offsetY="-85" />

                    <OnMouseEnter>
                        self.mouseInside = true
                    </OnMouseEnter>

                    <OnMouseExit>
                        self.mouseInside = false
                    </OnMouseExit>

                    <OnMouseDown>
                        if button == MOUSE_BUTTON_INDEX_LEFT and self.canRotate then
                            self.isRotating = true
                            BeginItemPreviewSpin()
                        end
                    </OnMouseDown>

                    <OnMouseUp>
                        if button == MOUSE_BUTTON_INDEX_LEFT then
                            if self.isRotating then
                                self.isRotating = false
                                EndItemPreviewSpin()
                            end
                        end
                    </OnMouseUp>

                    <OnEffectivelyHidden>
                        if self.isRotating then
                            self.isRotating = false
                            EndItemPreviewSpin()
                        end
                    </OnEffectivelyHidden>

                    <OnUpdate>
                        if self.mouseInside and CanSpinPreviewCharacter() then
                            self.canRotate = true
                            WINDOW_MANAGER:SetMouseCursor(MOUSE_CURSOR_ROTATE)
                        else
                            if self.canRotate then
                                WINDOW_MANAGER:SetMouseCursor(MOUSE_CURSOR_DO_NOT_CARE)
                            end
                            self.canRotate = false
                        end
                    </OnUpdate>
                </Control>

                <Label name="$(parent)VariationLabel" font="ZoFontWinH1" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" horizontalAlignment="CENTER" level="2" hidden="true">
                    <Dimensions x="350"/>
                    <Anchor point="BOTTOM" relativeTo="$(parent)RotationArea" offsetY="-90" />
                </Label>
                
                <Button name="$(parent)PreviewVariationLeftArrow" inherits="ZO_DefaultButton" level="3" hidden="true">
                    <Dimensions x="64" y="64"/>
                    <Anchor point="RIGHT" relativeTo="$(parent)VariationLabel" relativePoint="LEFT" offsetX="-16" />
                    <Textures
                        normal="EsoUI/Art/Crafting/smithing_leftArrow_up.dds"
                        pressed="EsoUI/Art/Crafting/smithing_leftArrow_down.dds"
                        mouseOver="EsoUI/Art/Crafting/smithing_leftArrow_over.dds"
                    />

                    <OnClicked>
                        ZO_Market_PreviewArrowOnMouseClicked(self, ZO_MARKET_PREVIEW_DIRECTION_PREVIOUS)
                    </OnClicked>
                </Button>
                
                <Button name="$(parent)PreviewVariationRightArrow" inherits="ZO_DefaultButton" level="3" hidden="true">
                    <Dimensions x="64" y="64"/>
                    <Anchor point="LEFT" relativeTo="$(parent)VariationLabel" relativePoint="RIGHT" offsetX="16" />
                    <Textures
                        normal="EsoUI/Art/Crafting/smithing_rightArrow_up.dds"
                        pressed="EsoUI/Art/Crafting/smithing_rightArrow_down.dds"
                        mouseOver="EsoUI/Art/Crafting/smithing_rightArrow_over.dds"
                    />

                    <OnClicked>
                        ZO_Market_PreviewArrowOnMouseClicked(self, ZO_MARKET_PREVIEW_DIRECTION_NEXT)
                    </OnClicked>
                </Button>

            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>